{% extends 'layout.html.twig' %}

{% block content %}
    {% if error %}
        <div class="alert alert-danger">
            Identification incorrecte
        </div>
    {% endif%}
    <h1 class="text-center">Connexion</h1>
    <form method="post" id="form">
        <img src="{{asset('upload/logoconnexionrond.png')}}" alt="logo" class="logoform"/>
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="_username" value="{{ last_username }}">
        </div>
         <div class="form-group">
            <label>Mot de passe</label>
            <input type="password" class="form-control" name="_password">
        </div>
        <div class="form-btn-group pull-right">
            <button type="submit" class="btn btn-primary">
                Se connecter
            </button>
        </div>
    </form>   
{% endblock %}
