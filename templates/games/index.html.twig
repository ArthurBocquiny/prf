{% extends 'layout.html.twig' %}

{% block content %}
    <img src="{{asset('upload/logojeurond.png')}}" alt="logo" class="logoform"/>
    <h1>Jeux Esport</h1>
    <div class="row">
    {% for jeu in jeux %}
        <div class="col-md-4 cadre">
        {% if jeu.cover is defined %}
                <img src="{{ jeu.cover.url }}">
        {% endif %}
        <h2>{{ jeu.name }}</h2>
        </div>
    {% endfor %}
    </div>
{% endblock %}