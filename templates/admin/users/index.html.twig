{% extends 'layout.html.twig' %}

{% block content %}
    
    <h3>Liste des membres</h3>

<table class="table">
        <tr>
            <th>Id</th>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Pseudo</th>
            <th>Email</th>
            <th>Rôle</th>
            <th>Pays</th>
            <th>Date de naissance</th>
            <th width="250px"></th>
        </tr>
        {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.firstname }}</td>
            <td>{{ user.lastname }}</td>
            <td>{{ user.pseudo }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.role }}</td>
            <td>{{ user.country }}</td>
            <td>{{ user.birthdate|date("d/m/Y") }}</td>
            <td>
                {% if user.role == 'ROLE_USER' %}
                    <a href="{{ path('app_admin_users_upgrade', {id: user.id}) }}" class="btn btn-primary">
                        Promouvoir
                    </a>
                {% endif %}
                {% if app.user.id != user.id and user.role != 'ROLE_ADMIN' %}
                    <a href="{{ path('app_admin_users_delete', {id: user.id}) }}" class="btn btn-danger">
                        Supprimer
                    </a>
                {% else %}
                    [  Aucune action n'est disponible  ]
                {% endif %}
            </td>
        </tr>
        {% endfor %}
    </table>
    
{% endblock %}
